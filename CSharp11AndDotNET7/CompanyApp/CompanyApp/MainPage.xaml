<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompanyApp.MainPage"
             BackgroundColor="White">
    
    <ScrollView>
        <VerticalStackLayout Margin="10" >
            
            <VerticalStackLayout Margin="10" BackgroundColor="Crimson">
                <Frame BorderColor="White" BackgroundColor="Crimson" Margin="20" HeightRequest="80" CornerRadius="15">
                    <Label Text="Welcome to Company App" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" FontSize="Title">
                        
                    </Label>
                </Frame>
            </VerticalStackLayout>
            <VerticalStackLayout Margin="10" BackgroundColor="Crimson">
                <ListView ItemsSource="{Binding customList}">
                    
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            
                            <ViewCell>
                                <Label Text="{Binding MyProperty}">
                                    
                                </Label>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
